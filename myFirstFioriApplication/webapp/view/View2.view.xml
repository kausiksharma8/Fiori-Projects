<mvc:XMLView
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="fiori.practice.controller.View2"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml"
>
    <Page
        title="View 2"
        showNavButton="true"
        navButtonPress="onBack"
    >
        <!-- <Button text="Back" press="onBack"></Button> -->
        <content>
            <ObjectHeader
                icon="{photo}"
                title="{name}"
                number="{price}"
                class="sapUiResponsivePadding--header"
                numberUnit="{unit}"
            >
                <statuses>
                    <ObjectStatus
                        text="{
                                'path':'availability',
                                'formatter':'.formatter.getAvailability'
                            }"
                        state="{
                                'path': 'availability',
                                'formatter':'.formatter.setState'
                                }"
                    />
                </statuses>
                <!-- <ObjectAttribute text="{benefit}" />
                <ObjectAttribute text="{type}" /> -->
            </ObjectHeader>

            <IconTabBar class="sapUiResponsiveContentPadding">
                <items>
                    <IconTabFilter
                        icon="sap-icon://address-book"
                        iconColor="Negative"
                        text="Address Book"
                    >
                    <core:Fragment
                            fragmentName="fiori.practice.fragments.addressBook"
                            type="XML"
                        />
                        
                    </IconTabFilter>
                    <IconTabFilter
                        icon="sap-icon://detail-more"
                        iconColor="Positive"
                        key="supper"
                        text="More Info"
                    >
                        <core:Fragment fragmentName="fiori.practice.fragments.moreInfo" type="XML"></core:Fragment>
                    </IconTabFilter>
                    <IconTabFilter
                        icon="sap-icon://supplier"
                        iconColor="Critical"
                        key="supper"
                        text="Supplier Data"
                    >
                        
                    </IconTabFilter>
                    <IconTabFilter
                        icon="sap-icon://addresses"
                        iconColor="Neutral"
                        key="city"
                        text="City"
                    />
                </items>
            </IconTabBar>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button
                    icon="sap-icon://filter"
                    type="Emphasized"
                />
            </Toolbar>
        </footer>
    </Page>
</mvc:XMLView>
