<mvc:XMLView
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="fiori.practice.controller.View1"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml"
>
    <Page title="View 1" showFooter="true" floatingFooter="true" > 
        <headerContent>
            <Button
                icon="sap-icon://action"
                tooltip="Share"
                press="goToView1"
            />
        </headerContent>
        <content>
            <SearchField
                placeholder="search"
                showRefreshButton="true"
                showSearchButton="true"
                liveChange="_onSearch"
            />
            <List
                id="myList"
                items="{/fruits}"
                
            >
                <items>
                    <ObjectListItem
                        title="{name}"
                        intro="{benefit}"
                        number="{price}"
                        numberUnit="{unit}"
                        icon="{photo}"
                        type = "Navigation"
                        press="_onListItemSelection"
                    >
                        <attributes>
                            <ObjectAttribute
                                title="benefit"
                                text="{benefit}"
                            />
                            <ObjectAttribute
                                title="colour"
                                text="{color}"
                            />
                        </attributes>
                        <firstStatus>
                            <ObjectStatus
                                text="{
                                    'path':'availability',
                                    'formatter':'.formatter.getAvailability'
                                }"
                                state="{
                                    'path': 'availability',
                                    'formatter':'.formatter.setState'
                                }"
                            />
                        </firstStatus>
                    </ObjectListItem>
                </items>
            </List>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button icon="sap-icon://filter" type="Emphasized" press="_onPressFilter" id="__idFilterButton" />
            </Toolbar>
        </footer>
    </Page>
</mvc:XMLView>
